<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center pb-2 mb-4 border-bottom">
        <h2 class="h3 text-dark">รายงานรายได้</h2>
    </div>

    <div class="card p-4 mb-4 shadow-sm border-0">
        <form action="/report_revenue" method="GET">
            <div class="row align-items-end">
                <div class="col-md-3 mb-3">
                    <label class="form-label text-muted small fw-bold">รูปแบบการดูยอด</label>
                    <select class="form-select shadow-none" name="filterType" id="filterType" onchange="toggleInput()">
                        <option value="daily" <%= filterType === 'daily' ? 'selected' : '' %>>ยอดรายวัน</option>
                        <option value="monthly" <%= filterType === 'monthly' ? 'selected' : '' %>>ยอดรายเดือน</option>
                    </select>
                </div>
                
                <div class="col-md-4 mb-3 <%= filterType === 'daily' ? '' : 'd-none' %>" id="dailyInput">
                    <label class="form-label text-muted small fw-bold">เลือกวันที่</label>
                    <input type="date" class="form-control shadow-none" name="filterDate" value="<%= filterDate %>">
                </div>

                <div class="col-md-4 mb-3 <%= filterType === 'monthly' ? '' : 'd-none' %>" id="monthlyInput">
                    <label class="form-label text-muted small fw-bold">เลือกเดือน</label>
                    <input type="month" class="form-control shadow-none" name="filterMonth" value="<%= filterMonth %>">
                </div>

                <div class="col-md-2 mb-3">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">ดูรายงาน</button>
                </div>
            </div>
        </form>
    </div>

    <div class="card text-white mb-4 p-4 text-center shadow-sm border-0" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%); border-radius: 15px;">
        <h5 class="fw-normal mb-2">ยอดรวมรายได้ <%= displayTitle %></h5>
        <h1 class="display-4 fw-bold mb-0">฿ <%= totalRevenue.toLocaleString() %></h1>
    </div>

    <div class="card p-4 shadow-sm border-0">
        <h5 class="fw-bold mb-3">รายการรับเงิน</h5>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="text-muted">วันที่ชำระ</th>
                        <th class="text-muted">รหัสงานซ่อม</th>
                        <th class="text-muted">จำนวนเงิน</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(payments.length > 0) { %>
                        <% payments.forEach(function(p) { %>
                            <tr>
                                <td><%= p.payment_date %></td>
                                <td>REP-<%= String(p.repair_id).padStart(3, '0') %></td>
                                <td class="text-success fw-bold">+ ฿<%= (p.total_cost || 0).toLocaleString() %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="text-center py-4 text-muted">ไม่พบข้อมูลการรับเงินในช่างเวลานี้</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</main>
</div>
</div>

<script>
    function toggleInput() {
        const type = document.getElementById('filterType').value;
        const dailyInput = document.getElementById('dailyInput');
        const monthlyInput = document.getElementById('monthlyInput');

        if (type === 'daily') {
            dailyInput.classList.remove('d-none');
            monthlyInput.classList.add('d-none');
        } else {
            dailyInput.classList.add('d-none');
            monthlyInput.classList.remove('d-none');
        }
    }
</script>

</body>
</html>
<%- include('partials/footer') %>