<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
    <h2 class="h4 fw-bold text-dark">
        <i class="bi bi-pencil-square text-warning me-2"></i>แก้ไขข้อมูลลูกค้า (CUST-<%= String(customer.customer_id).padStart(3, '0') %>)
    </h2>
    <a href="/customers" class="btn btn-outline-secondary rounded-pill px-3">
        <i class="bi bi-arrow-left"></i> ย้อนกลับ
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm" style="border-radius: 12px;">
            <div class="card-body p-4">
                <form action="/update-customer/<%= customer.customer_id %>" method="POST">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="first_name" class="form-label fw-bold">ชื่อ *</label>
                            <input type="text" class="form-control shadow-none" id="first_name" name="first_name" 
                                   value="<%= customer.first_name %>" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="last_name" class="form-label fw-bold">นามสกุล *</label>
                            <input type="text" class="form-control shadow-none" id="last_name" name="last_name" 
                                   value="<%= customer.last_name %>" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label fw-bold">เบอร์โทรศัพท์ *</label>
                        <input type="text" class="form-control shadow-none" id="phone" name="phone" 
                               value="<%= customer.phone %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label fw-bold">อีเมล</label>
                        <input type="email" class="form-control shadow-none" id="email" name="email" 
                               value="<%= customer.email %>">
                    </div>

                    <div class="mb-4">
                        <label for="address" class="form-label fw-bold">ที่อยู่</label>
                        <textarea class="form-control shadow-none" id="address" name="address" rows="3"><%= customer.address %></textarea>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-3">
                        <a href="/customers" class="btn btn-light rounded-pill px-4 me-md-2">ยกเลิก</a>
                        <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm">
                            <i class="bi bi-check-circle me-1"></i> อัปเดตข้อมูลลูกค้า
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>