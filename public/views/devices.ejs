<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
    <h2 class="h4 fw-bold text-dark"><i class="bi bi-pc-display text-primary me-2"></i>จัดการข้อมูลอุปกรณ์</h2>
    <a href="/add_device" class="btn btn-primary rounded-pill px-4 shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> เพิ่มอุปกรณ์ใหม่
    </a>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 12px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light text-muted">
                    <tr>
                        <th class="ps-4">รหัสอุปกรณ์</th>
                        <th>ประเภท</th>
                        <th>ยี่ห้อ/รุ่น</th>
                        <th>ลูกค้าเจ้าของเครื่อง</th>
                        <th class="text-end pe-4">จัดการ</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (devices.length === 0) { %>
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">ยังไม่มีข้อมูลอุปกรณ์ในระบบ</td>
                        </tr>
                    <% } else { %>
                        <% devices.forEach(function(dev) { %>
                            <tr>
                                <td class="ps-4 fw-medium text-muted">DEV-<%= String(dev.device_id).padStart(3, '0') %></td>
                                <td>
                                    <span class="badge bg-light text-dark border rounded-pill px-3">
                                        <%= dev.device_type %>
                                    </span>
                                </td>
                                <td class="fw-bold"><%= dev.brand %> <%= dev.model %></td>
                                <td>
                                    <i class="bi bi-person text-secondary me-1"></i>
                                    <%= dev.first_name %> <%= dev.last_name %>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/edit-device/<%= dev.device_id %>" class="btn btn-sm btn-outline-warning rounded-pill px-3">
                                        <i class="bi bi-pencil"></i> แก้ไข
                                    </a>
                                    <form action="/delete-device/<%= dev.device_id %>" method="POST" class="d-inline" onsubmit="return confirm('ยืนยันการลบข้อมูลอุปกรณ์?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer') %>