<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="d-flex justify-content-between align-items-center pb-2 mb-4 border-bottom">
    <h2 class="h3 text-dark">ยินดีต้อนรับ, คุณ <%= customerName %></h2>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm text-white" style="background: linear-gradient(45deg, #ff6b00, #ff9e00); border-radius: 12px;">
            <div class="card-body p-4">
                <h6 class="card-title text-white-50"><i class="bi bi-tools"></i> อุปกรณ์ที่กำลังซ่อม</h6>
                <h2 class="card-text fw-bold"><%= activeRepairs %> <small class="fs-6 fw-normal">รายการ</small></h2>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm text-white" style="background-color: #1a1c2d; border-radius: 12px;">
            <div class="card-body p-4">
                <h6 class="card-title text-white-50"><i class="bi bi-wallet2"></i> รอชำระเงิน / รอรับเครื่อง</h6>
                <h2 class="card-text fw-bold"><%= pendingPayments %> <small class="fs-6 fw-normal">รายการ</small></h2>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4" style="border-radius: 12px;">
    <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white border-0">
        <h5 class="mb-0 fw-bold"><i class="bi bi-search text-primary me-2"></i>ติดตามสถานะงานซ่อมของคุณ</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light text-muted">
                    <tr>
                        <th class="ps-4">รหัสงาน</th>
                        <th>วันที่ส่งซ่อม</th>
                        <th>อุปกรณ์</th>
                        <th>ช่างผู้ดูแล</th>
                        <th>สถานะ</th>
                        <th class="text-end pe-4">รายละเอียด</th>
                    </tr>
                </thead>
                <tbody>
                    <% myRepairs.forEach(function(repair) { %>
                        <tr>
                            <td class="ps-4 fw-medium text-muted">REP-<%= String(repair.id).padStart(3, '0') %></td>
                            <td><%= repair.date %></td>
                            <td><%= repair.device %></td>
                            <td>ช่าง<%= repair.tech %></td>
                            <td>
                                <% if(repair.status === 'In Progress') { %>
                                    <span class="badge rounded-pill px-3" style="background-color: #ff6b00;">กำลังซ่อม</span>
                                <% } else if(repair.status === 'Completed') { %>
                                    <span class="badge bg-success rounded-pill px-3">เสร็จสิ้น</span>
                                <% } else { %>
                                    <span class="badge bg-secondary rounded-pill px-3"><%= repair.status %></span>
                                <% } %>
                            </td>
                            <td class="text-end pe-4">
                                <a href="/repair-details/<%= repair.id %>" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                    <i class="bi bi-file-text"></i> ดูใบแจ้งซ่อม
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer') %>