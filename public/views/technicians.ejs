<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
    <h2 class="h4 fw-bold text-dark"><i class="bi bi-person-badge text-primary me-2"></i>จัดการข้อมูลช่างเทคนิค</h2>
    <a href="/add_technician" class="btn btn-primary rounded-pill px-4 shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> เพิ่มช่างใหม่
    </a>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 12px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light text-muted">
                    <tr>
                        <th class="ps-4">รหัสช่าง</th>
                        <th>ชื่อ - นามสกุล</th>
                        <th>เบอร์โทรศัพท์</th>
                        <th>อีเมล</th>
                        <th>วันที่เริ่มงาน</th>
                        <th class="text-end pe-4">จัดการ</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (technicians.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">ยังไม่มีข้อมูลช่างเทคนิคในระบบ</td>
                        </tr>
                    <% } else { %>
                        <% technicians.forEach(function(tech) { %>
                            <tr>
                                <td class="ps-4 fw-medium text-muted">TECH-<%= String(tech.technician_id).padStart(3, '0') %></td>
                                <td class="fw-bold"><%= tech.first_name %> <%= tech.last_name %></td>
                                <td><%= tech.phone || '-' %></td>
                                <td><%= tech.email || '-' %></td>
                                <td>
                                    <span class="badge bg-light text-dark border fw-normal px-2">
                                        <i class="bi bi-calendar3 me-1"></i><%= tech.hire_date %>
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/edit-technician/<%= tech.technician_id %>" class="btn btn-sm btn-outline-warning rounded-pill px-3">
                                        <i class="bi bi-pencil"></i> แก้ไข
                                    </a>
                                    <form action="/delete-technician/<%= tech.technician_id %>" method="POST" class="d-inline" onsubmit="return confirm('ยืนยันการลบข้อมูลช่างเทคนิค?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-2">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer') %>